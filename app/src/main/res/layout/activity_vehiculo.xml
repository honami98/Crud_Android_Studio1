<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".VehiculoActivity">


    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Registro de Vehiculos"
        android:textSize="25dp"
        android:layout_margin="10dp"/>

    <EditText
        android:id="@+id/txtPlaca"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:ems="10"
        android:hint="Placa: XXX696"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="33dp"
        tools:layout_editor_absoluteY="73dp" />

    <EditText
        android:id="@+id/txtMarca"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:ems="10"
        android:hint="Nissan"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="33dp"
        tools:layout_editor_absoluteY="150dp" />

    <EditText
        android:id="@+id/txtModelo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="1998"
        android:layout_margin="10dp"
        tools:layout_editor_absoluteX="33dp"
        tools:layout_editor_absoluteY="228dp" />

    <CheckBox
        android:id="@+id/checkBoxActivo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Activo"
        android:enabled="false"
        android:layout_margin="10dp"
        tools:layout_editor_absoluteX="277dp"
        tools:layout_editor_absoluteY="209dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="393dp">

        <Button
            android:id="@+id/btnRegistrarVehiculo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Registrar"
            android:onClick="guardarVehiculo"
            tools:layout_editor_absoluteX="33dp"
            tools:layout_editor_absoluteY="341dp"
            android:layout_margin="10dp"/>

        <Button
            android:id="@+id/btnConsultarVehiculo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Buscar"
            android:onClick="consultarVehiculo"
            tools:layout_editor_absoluteX="33dp"
            tools:layout_editor_absoluteY="341dp"
            android:layout_margin="10dp"/>

        <Button
            android:id="@+id/button7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:onClick="Home"
            android:text="Regresar"
            tools:layout_editor_absoluteX="177dp"
            tools:layout_editor_absoluteY="344dp" />

    </LinearLayout>
</LinearLayout>