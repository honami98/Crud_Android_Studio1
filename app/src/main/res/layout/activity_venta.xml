<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".VentaActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Formulario de Venta"
            android:textSize="25dp"
            android:layout_margin="10dp"
            tools:layout_editor_absoluteX="23dp"
            tools:layout_editor_absoluteY="16dp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Código de Venta"
            android:layout_margin="10dp"
            android:textSize="18dp"
            tools:layout_editor_absoluteX="26dp"
            tools:layout_editor_absoluteY="59dp" />

        <EditText
            android:id="@+id/txtCodigoVenta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="N°: 1547"
            android:inputType="textPersonName"
            android:layout_margin="10dp"
            tools:layout_editor_absoluteX="149dp"
            tools:layout_editor_absoluteY="46dp" />


        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="Fecha"
            android:layout_margin="10dp"/>

        <EditText
            android:id="@+id/txtFecha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="date"
            android:hint="dd/mm/yyyy"
            android:layout_margin="10dp"
            tools:layout_editor_absoluteX="148dp"
            tools:layout_editor_absoluteY="93dp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="Identificación Cliente"
            android:textSize="18dp"
            tools:layout_editor_absoluteX="18dp"
            tools:layout_editor_absoluteY="193dp" />

        <EditText
            android:id="@+id/txtIdCliente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:ems="10"
            android:hint="Id: 10376636109"
            android:inputType="textPersonName"
            tools:layout_editor_absoluteX="162dp"
            tools:layout_editor_absoluteY="183dp" />

    </LinearLayout>

    <Button
        android:id="@+id/btnBuscarCliente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:text="Buscar"
        android:onClick="consultarIdVenta"
        tools:layout_editor_absoluteX="29dp"
        tools:layout_editor_absoluteY="228dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Placa Vehiculo"
            android:layout_margin="15dp"
            tools:layout_editor_absoluteX="29dp"
            tools:layout_editor_absoluteY="284dp" />

        <EditText
            android:id="@+id/txtPlacaVehiculo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Placa: XXX767"
            android:layout_margin="15dp"
            android:layout_marginRight="100dp"
            tools:layout_editor_absoluteX="162dp"
            tools:layout_editor_absoluteY="276dp" />
    </LinearLayout>

    <Button
        android:id="@+id/btnBuscarVehiculo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Buscar"
        android:onClick="consultarPlacaVenta"
        android:layout_margin="15dp"
        tools:layout_editor_absoluteX="26dp"
        tools:layout_editor_absoluteY="341dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnGuardar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Guardar"
            android:onClick="guardarVenta"
            android:layout_margin="15dp"
            tools:layout_editor_absoluteX="23dp"
            tools:layout_editor_absoluteY="485dp" />

        <Button
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Regresar"
            android:onClick="Home"
            android:layout_margin="15dp"
            tools:layout_editor_absoluteX="157dp"
            tools:layout_editor_absoluteY="485dp" />

        <Button
            android:id="@+id/btnBuscarVenta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Buscar"
            android:onClick="consultarCodigo"
            android:layout_margin="15dp"
            tools:layout_editor_absoluteX="157dp"
            tools:layout_editor_absoluteY="485dp" />
    </LinearLayout>
</LinearLayout>